/* pages/mine/mine.wxss */
.header{
  width: 94%;
  background: #fff;
  margin: 0 auto;
  margin-left:3%;
  height: 250rpx;
  position: relative;
}
.header .img{
  width: 150rpx;
  height: 150rpx;
  border: solid 1px #ccc;
  border-radius: 50%;
  position: absolute;
  left: 8%;
  top: 20%;
}
.header .img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.header .user{
  width: 100%;
  height: 100%;
  position: relative
}
.header .user text:first-child{
  position: absolute;
  left: 40%;
  top: 30%;
}
.header .user text:last-child{
  position: absolute;
  left: 40%;
  top: 60%;
}

.introduce{
  width: 94%;
  background: #fff;
  margin: 0 auto;
  margin-left:3%;
  margin-top: 20rpx;
  height: 80rpx;
  line-height: 80rpx
 
}
.introduce text{
   padding-left:10%; 
}

.info{
  height: 30rpx;
  margin: 30rpx 0;
}
.info text:first-child{
  float: left;
  margin-left:4%;
  font-size: 25rpx;
} 
.info text:last-child{
  float: right;
  margin-right: 4%;
  font-size: 25rpx;
} 

.content{
  width: 94%;
  background: #fff;
  margin: 0 auto;
  margin-left:3%;
  height: 150rpx;
  position: relative;
  border-bottom: #ccc solid 1rpx
}
.content .lesson{
  width: 120rpx;
  height: 120rpx;
 
    border-radius: 50%;
  position: absolute;
  left: 10%;
  top: 10%;
}
.content .lesson image{
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.content .lessonName{
  width: 100%;
  height: 100%;
  position: relative;
}
.content .lessonName text{
  position: absolute;
  left: 40%;
  top: 40%;
}

.detail{
  width: 94%;
  background: #fff;
  margin: 0 auto;
  margin-left:3%;
  margin-top: 20rpx;
  height: 80rpx;
  line-height: 80rpx
 
}
.detail text{
   padding-left:10%; 
}