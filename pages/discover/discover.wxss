/**index.wxss**/
@import "../searchView/searchView.wxss";
swiper,swiper image{
  width: 96%;
  margin-left: 2%;
  height: 400rpx;
}

.header{
  width: 94%;
  background: #fff;
  margin: 0 auto;
  margin-left:3%;
  height: 400rpx;
}

.header .circleAll{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.header .circle{
  margin-top: 40rpx;
  width: 18%;
  height: 120rpx;
  border-radius: 50%;
}
.header image{
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.header text{
  margin-left: 16rpx;
}

.text{
  margin: 20rpx 0rpx;
  height: 100rpx;
}
.text .like{
  width: 50%;
  height: 60rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 25rpx;
  line-height: 60rpx;
  border: #B8D9EB solid 2rpx;
}
.text .info{
  margin-top: 10rpx;
}
.text .info text:nth-child(1){
  float: left;
  margin-left:4%;
  font-size: 25rpx;
} 
.text .info text:nth-child(2){
  float: right;
  margin-right: 4%;
  font-size: 25rpx;
} 

.content{
  width: 94%;
  background: #fff;
  margin: 0 auto;
  margin-left:3%;
  padding-bottom: 30rpx;
}
.content .blockAll{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.content .blockAll .block{
  margin:30rpx;
  width:  40%;
  height: 200rpx;
}
.content .blockAll .block image{
  width: 100%;
  height: 100%;
}
.content .blockAll .block text{
  margin-left: 33%;
}