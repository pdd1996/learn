/* pages/course/information/information.wxss */
.nav{
  font-size: 15px;
  position: fixed;
 
  top: 0px;
  width: 100%;
  height: 40px;

}
.left{
  position: absolute;
  top: 10px;
  left: 20%;
}
.center{
  position: absolute;
  top: 10px;
  left: 47%;
}
.right{
  position: absolute;
  top: 10px;
  left: 75%;
}

 .container{
  width: 100%;
  margin-top: 80rpx;
  height: 100rpx;
}
.container .content{
  width: 100%;
}
 .container .task{
  width: 94%;
  height: 210rpx;
  background: #fff;
  margin: 0 auto;
  margin-left:3%;
  position: relative;
  border-bottom: 2rpx solid #ccc;
}
 .task .info{
  width: 100%;
  position: relative;
}

 .task .info text:first-child{
  position: absolute;
  left: 15%;
  top: 40rpx;
}
  .task .info text:nth-child(2){
   position: absolute;
   left: 18%;
   top: 130rpx;
}
  .task .info text:nth-child(3){
   position: absolute;
   left: 45%;
   top: 130rpx;
}
 