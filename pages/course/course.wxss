.header{
  display: flex;
}
.header .search{
  width: 84%;
  border: solid #ccc 2rpx;
  margin-left: 3%;
  background: #fff;
  display: inline-flex;
  position: relative
}
.header .search .img{
  width:30rpx;
  height: 30rpx;
  align-items: center; 
  position:absolute;
  top:20%;
  left:1%;
}
.header .search .img image{
  width: 100%;
  height: 100%;
}
.header .search input{
  padding-left:40rpx
}
.header .add{
  margin-left: 2%;
  width: 50rpx;
  height: 50rpx;
  display: inline-block
}
.header .add image{
  width: 100%;
  height: 100%;
}

.content{
  margin-top: 40rpx;
}
.content .class{
  width: 94%;
  height: 200rpx;
  margin: 0 autuo;
  margin-left: 3%;
  background:#fff; 
  position: relative;
  border-bottom: 2rpx solid #ccc
} 
.content .class .img{
  width: 120rpx;
  height: 120rpx;
  display: inline-block;
  position: absolute;
  left: 5%;
  top: 20%
}
.content .class .img image{
  width: 100%;
  height: 100%;
}

