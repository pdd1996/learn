/* pages/course/member/statistics/statistics.wxss */
.container {
  position: absolute;
  top: 30%;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.container ec-canvas{
  width: 100%;
  height: 100%;
 
}

.conter{
  width: 94%;

  margin: 0 auto;
  margin-left:3%;
}
.conter .left{
  width: 49%;
  height: 300rpx;
  display: inline-block;
  background: #fff;
  border:  1rpx solid #ccc;
  position: relative;

}
.conter  text:nth-child(1){
  position: absolute;
  left: 32%;
  top: 15%;
}
.conter  text:nth-child(2){
  position: absolute;
  left: 40%;
  top: 55%;
}
.conter .right{
  width:49%;
  height: 300rpx;
  display: inline-block;
  border:  1rpx solid #ccc;
  margin-left: 1%;
  background: #fff;
  position: relative;
}


.info{
  height: 30rpx;
  margin: 30rpx 0;
}
.info text:first-child{
  float: left;
  margin-left:6%;
  font-size: 25rpx;
} 
.info text:nth-child(2){
  float: left;
  margin-left:40%;
  font-size: 25rpx;
} 
.info text:nth-child(3){
  float: right;
  margin-right:5%;
  font-size: 25rpx;
} 
.info text:nth-child(4){
  float: right;
  margin-right:6%;
  font-size: 25rpx;
} 

.content{
  width: 94%;
  background: #fff;
  margin: 0 auto;
  margin-left:3%;
  height: 150rpx;
  position: relative;
  border-bottom: 1rpx solid #ccc
}
.content .member{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  position: absolute;
  left: 5%;
  top: 10%;
}
.content .member image{
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.content .memberName{
  width: 100%;
  height: 100%;
  position: relative;
}
.content .memberName text:first-child{
  position: absolute;
  left: 30%;
  top: 40%;
}
.content .memberName text:nth-child(2){
  position: absolute;
  left: 60%;
  top: 40%;
}
.content .memberName text:nth-child(3){
  position: absolute;
  left: 78%;
  top: 40%;
}
.content .memberName text:last-child{
  position: absolute;
  left: 90%;
  top: 40%;
}

