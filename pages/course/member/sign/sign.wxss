/* pages/course/member/sign.wxss */
.header{
    width: 100%;
    height: 100rpx;
    text-align: center;
}
.header .box{
    width: 60%;
    height: 100rpx;
    margin: 0 auto;
    background: #97C8E3;
    margin-top: 80rpx;
    line-height: 100rpx;
    border-radius:8rpx;
}

.info{
    height: 30rpx;
    margin: 30rpx 0;
  }
  .info text:first-child{
    float: left;
    margin-left:3%;
    font-size: 25rpx;
  } 
  .info text:nth-child(2){
    float: right;
    margin-right: 3%;
    font-size: 25rpx;
  } 

.container{
    width: 94%;
    background: #fff;
    margin:0 auto;
    margin-top: 40rpx;
}
.container .content{
    width: 100%;
    height: 200rpx;
    position: relative;
    border-bottom:2rpx solid #ccc 
}
.container .content text:nth-child(1){
    position: absolute;
    left: 10%;
    top: 20%;
}
.container .content text:nth-child(2){
    position: absolute;
    left: 70%;
    top: 20%;
}
.container .content text:nth-child(3){
    position: absolute;
    left: 10%;
    top: 60%;
}